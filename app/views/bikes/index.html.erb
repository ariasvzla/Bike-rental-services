 
 <% if user_signed_in? %>

   
<% if current_user.admin? %>

 <div id="content">
<h1>Bikes</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Quantity</th>
      <th>Price</th>
      <th>Status</th>
      <th>Category</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bikes.each do |bike| %>
      <tr>
        <td><%= (image_tag bike.title, :style => "height:100px") %></td>
        <td><%= bike.description %></td>
        <td><%= bike.quantity %></td>
        <td><%= bike.price %></td>
        <td><%= bike.status %></td>
        <td><%= bike.category %></td>
        <td><%= link_to 'Show', bike %></td>
        <td><%= link_to 'Edit', edit_bike_path(bike) %></td>
        <td><%= link_to 'Destroy', bike, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Bike', new_bike_path %>
</div>
<%else%>
<div id="content">
<h1>You are not allowed to see this go back please</h1>
</div>
<%end%>
<%end%>