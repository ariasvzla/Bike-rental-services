<p id="notice"><%= notice %></p>

<h1>Bookings</h1>

<table>
  <thead>
    <tr>
      <th>Start</th>
      <th>Return</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% for booking in @bookings %>
      <tr>
        <td><%= booking.start %></td>
        <td><%= booking.return %></td>
        <td><%= link_to 'Show', user_booking_path(@user,@booking) %></td>
        <td><%= link_to 'Edit', edit_user_booking_path(@booking, @user) %></td>
        <td><%= link_to 'Destroy', booking, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Booking', new_user_booking_path%>
